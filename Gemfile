source 'https://rubygems.org'

gem 'github-pages', group: :jekyll_plugins

group :jekyll_plugins do
  gem 'jekyll-seo-tag'
  gem 'jekyll-sitemap'
  gem 'jekyll-feed'
  gem 'jekyll-paginate'
  gem 'jekyll-archives'
  gem 'minima'  # Tema minima
end

gem 'faraday-retry'  # Para manejar la compatibilidad con Faraday v2.0+
